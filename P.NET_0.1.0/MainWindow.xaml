<Window x:Class="P.NET_0._1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P.NET_0._1._0"
        xmlns:viewModel="clr-namespace:P_NET.MVVM.ViewModel"

        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="13*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="P.net"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   FontSize="22"
                               Margin="20,0,0,0"/>
            <StackPanel Grid.Column="1" >
                <Button x:Name="BT_Exit"
                        Height="20"
                        Width="20"
                        Margin="0,0,-690,0" Click="BT_Exit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                    <Button.Background>
                        <ImageBrush ImageSource="/36887.jpg"/>
                    </Button.Background>

                </Button>

            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">

                <RadioButton x:Name ="Home" 
                    Content="Home"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}"/>


                <RadioButton x:Name ="Servers" 
                    Content="Servers"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding ServersViewCommand}"/>



                <RadioButton x:Name ="Account" 
                    Content="Account"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding AccountViewCommand}"/>


                <RadioButton x:Name ="Settings"
                    Content="Settings"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding ServersViewCommand}"/>
                
                <RadioButton x:Name ="Registration"
                    Content="Settings"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding RegistrationViewCommand}"/>
                <RadioButton x:Name ="Login"
                    Content="Settings"
                    Height="50"
                    Foreground="White"
                    FontSize="14"
                    Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding LoginViewCommand}"/>
            </StackPanel>

            <ContentControl Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,10,10,10"
                        Content="{Binding CurrentView}" Grid.RowSpan="2" DataContext="{Binding Mode=OneWay}" />
        </Grid>



    </Border>



